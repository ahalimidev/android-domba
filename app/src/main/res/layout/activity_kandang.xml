<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".view.login">

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:carbon_cornerRadiusBottomEnd="25dp"
            app:carbon_cornerRadiusBottomStart="25dp">

            <carbon.widget.ImageView
                android:id="@+id/iv_back"
                android:layout_width="24sp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <carbon.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Kandang"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </carbon.widget.LinearLayout>

       <carbon.widget.LinearLayout
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <carbon.widget.LinearLayout
               android:layout_weight="1"
               android:background="#D7F8CB"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <carbon.widget.EditText
                   android:layout_weight="1"
                   android:id="@+id/et_name"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:padding="7dp"
                   android:gravity="center|left"
                   android:singleLine="true"
                   android:background="#02FFFFFF"/>
               <carbon.widget.ImageView
                   android:layout_margin="10dp"
                   android:layout_gravity="center"
                   android:id="@+id/iv_pencarian"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_search_24"/>
           </carbon.widget.LinearLayout>
           <carbon.widget.ImageView
               android:id="@+id/iv_filter"
               android:layout_margin="10dp"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_filter_alt_24"/>
       </carbon.widget.LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <carbon.widget.TextView
                android:layout_weight="2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tampilkan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FF922C"/>
            <carbon.widget.TextView
                android:id="@+id/tv_dijual"
                android:padding="7dp"
                app:carbon_cornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Dijual"/>
            <carbon.widget.TextView
                android:id="@+id/tv_terjual"
                android:padding="7dp"
                app:carbon_cornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#DEF2D7"
                android:gravity="center"
                android:textColor="#BEBEBE"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Terjual"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tampil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>
    </carbon.widget.LinearLayout>

</RelativeLayout>