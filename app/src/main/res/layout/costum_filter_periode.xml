<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5FFF1"
    android:orientation="vertical"
    app:carbon_cornerRadius="20dp"
    android:layout_height="wrap_content">
    <carbon.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_margin="20dp"
        android:text="Periode Pencarian"
        android:textAppearance="@style/carbon_TextAppearance.Body1"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:textStyle="bold" />

    <carbon.widget.LinearLayout
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:carbon_cornerRadius="15dp"
        android:background="#E1FAD7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <carbon.widget.TextView
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:layout_weight="1"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="#000"
            android:id="@+id/tv_awal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal"/>
        <carbon.widget.TextView
            android:layout_weight="1"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sampai"/>
        <carbon.widget.TextView
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:layout_weight="1"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tv_akhir"
            android:text="Pilih Tanggal"/>
    </carbon.widget.LinearLayout>

    <carbon.widget.Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:elevation="1dp"
        android:textAllCaps="false"
        android:text="Pakai Filter"
        android:id="@+id/bt_kirim"
        android:background="@color/orange"
        android:textColor="#fff"
        android:textSize="16sp"
        app:carbon_cornerRadius="10dp" />
</carbon.widget.LinearLayout>