<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <carbon.widget.LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_gambar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="2dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            app:civ_border_color="#FF000000"/>
        <carbon.widget.LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <carbon.widget.TextView
                android:id="@+id/tv_kode_kambing"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:text="Kode Kambing"
                android:textColor="#fff"
                android:padding="5dp"
                android:gravity="center"
                android:background="#FF9800"
                app:carbon_cornerRadius="15dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <carbon.widget.TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cek UP Terkahir :"/>
            <carbon.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tgl_perawatan"/>
            <carbon.widget.TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluhan  :"/>
            <carbon.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_keluhan"/>
            <carbon.widget.TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Penanganan  :"/>
            <carbon.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_penanganan"/>
        </carbon.widget.LinearLayout>
    </carbon.widget.LinearLayout>
</androidx.cardview.widget.CardView>