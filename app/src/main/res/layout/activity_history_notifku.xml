<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".view.login">

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:carbon_cornerRadiusBottomEnd="25dp"
            app:carbon_cornerRadiusBottomStart="25dp">

            <carbon.widget.ImageView
                android:id="@+id/iv_back"
                android:layout_width="24sp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <carbon.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="History Notifikasi"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </carbon.widget.LinearLayout>

        <carbon.widget.HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <carbon.widget.TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Saat ini"
                    android:id="@+id/tv_hari_1"
                    android:textColor="#ffffff"
                    app:carbon_cornerRadius="7dp" />

                <carbon.widget.TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="#DEF2D7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="7 Hari"
                    android:id="@+id/tv_hari_7"
                    android:textColor="#FF922C"
                    app:carbon_cornerRadius="7dp" />

                <carbon.widget.TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="#DEF2D7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:id="@+id/tv_hari_14"
                    android:text="14 Hari"
                    android:textColor="#FF922C"
                    app:carbon_cornerRadius="7dp" />

                <carbon.widget.TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="#DEF2D7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="30 hari"
                    android:id="@+id/tv_hari_30"
                    android:textColor="#FF922C"
                    app:carbon_cornerRadius="7dp" />
            </carbon.widget.LinearLayout>
        </carbon.widget.HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tampil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>
    </carbon.widget.LinearLayout>

</RelativeLayout>