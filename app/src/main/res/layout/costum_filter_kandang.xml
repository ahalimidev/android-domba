<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5FFF1"
    android:layout_weight="1"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_margin="20dp"
            android:text="FILTER"
            android:textAppearance="@style/carbon_TextAppearance.Body1"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold" />
        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:text="Tipe Kandang / Kavling"
            android:textColor="#000000"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_kandang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Batas Luar Kndang / Kavling"
            android:textColor="#000000"
            android:textSize="16sp" />

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="min"
                android:id="@+id/tv_batas_min"
                android:inputType="number"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DFF0DE"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="max"
                android:id="@+id/tv_batas_max"
                android:inputType="number"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DFF0DE"/>
        </carbon.widget.LinearLayout>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Batas Kapasitas Kndang / Kavling"
            android:textColor="#000000"
            android:textSize="16sp" />

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="min"
                android:gravity="center"
                android:id="@+id/tv_kapasitas_min"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DFF0DE"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="max"
                android:gravity="center"
                android:id="@+id/tv_kapasitas_max"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DFF0DE"/>
        </carbon.widget.LinearLayout>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Batas Harga"
            android:textColor="#000000"
            android:textSize="16sp" />

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="min"
                android:gravity="center"
                android:id="@+id/tv_harga_min"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DFF0DE"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="max"
                android:id="@+id/tv_harga_max"
                android:inputType="number"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DFF0DE"/>
        </carbon.widget.LinearLayout>

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Urutan Berdasarkan"
            android:textColor="#000000"
            android:textSize="16sp" />


        <RadioGroup
            android:id="@+id/rg_kondisi"
            android:background="#DFF0DE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_terbaru"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Terbaru"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="#FF9800"/>
            <RadioButton
                android:id="@+id/rb_terlama"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Terlama"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="#FF9800"/>
        </RadioGroup>

        <carbon.widget.Button
            android:id="@+id/bt_pakai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:carbon_cornerRadius="20dp"
            android:text="Pakai Filter"/>

        <carbon.widget.TextView
            android:id="@+id/bt_ulang"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Atur Ulang"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/carbon_TextAppearance.Body1"
            android:layout_gravity="center"
            android:textColor="#859185"/>
    </carbon.widget.LinearLayout>

</carbon.widget.ScrollView>
