<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <carbon.widget.RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <carbon.widget.ImageView
                android:id="@+id/iv_gambar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:scaleType="fitXY" />

            <carbon.widget.ImageView
                android:visibility="gone"
                android:id="@+id/iv_gambar_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/terjual" />
        </carbon.widget.RelativeLayout>

        <carbon.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode kadang"
            android:id="@+id/tv_nama_kavaling"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <carbon.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode kadang"
            android:id="@+id/tv_kode_kandang"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <carbon.widget.LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <carbon.widget.ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/image_34"/>
                <carbon.widget.TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ukur"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="---------"/>
            </carbon.widget.LinearLayout>
            <carbon.widget.LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <carbon.widget.ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/vector_7"/>
                <carbon.widget.TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/tv_kambing"
                    android:textSize="12sp"

                    android:text="---------"/>
            </carbon.widget.LinearLayout>
        </carbon.widget.LinearLayout>
        <carbon.widget.LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <carbon.widget.ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/vector_8"/>
            <carbon.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                android:id="@+id/tv_type_kandang"
                android:text="---------"/>
        </carbon.widget.LinearLayout>

        <carbon.widget.TextView
            android:id="@+id/tv_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:text="harga kandang"
            android:textColor="#fff"
            android:padding="5dp"
            android:gravity="center"

            android:background="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>


